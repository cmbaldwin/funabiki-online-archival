<%= turbo_frame_tag 'production_zones', class: 'card' do %>
  <div class="card-body">
    <div class="card-title d-flex justify-content-between align-items-center align-middle">
      <div class="d-flex justify-content-start align-items-center align-middle">
        <%= button_tag class: 'collapse-reset btn btn-sm btn-secondary me-2 d-none', 
                      data: { 
                        action: 'click->oroshi--dashboard#resetFrames:prevent',
                        reset_within: 'supply_settings',
                        this_frame: 'production_zones',
                        controller: 'tippy',
                        tippy_content: '設定のフレームをリセットする',
                      } do %>
          <%= icon('list') %>
        <% end %>
        <h4 class="m-0">
          製造ゾーン
        </h4>
      </div>
      <%= link_to '追加',
            new_oroshi_production_zone_path,
            class: 'btn btn-sm btn-success',
            data: {
              turbo_frame: 'oroshi_modal_content',
              action: 'oroshi--dashboard#showModal:passive'
            } %>
    </div>
    <% if @production_zones.exists? %>
      <div class="list-group overflow-y-scroll">
        <% @production_zones.each do |production_zone| %>
          <%= turbo_frame_tag dom_id(production_zone),
                              class: 'list-group-item list-group-item-primary',
                              src: edit_oroshi_production_zone_path(production_zone),
                              loading: 'lazy' do %>
            <div class="d-flex w-100 text-center justify-content-center align-items-center align-middle">
              <div class="spinner-border spinner-border-sm" role="status">
                <span class="visually-hidden">読み込み中...</span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-warning" role="alert">
        製造ゾーンが登録されていません。まずは製造ゾーンを登録してください。
      </div>
    <% end %>
  </div>
<% end %>