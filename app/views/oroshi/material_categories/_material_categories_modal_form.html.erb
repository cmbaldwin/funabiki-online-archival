<%= turbo_frame_tag 'material_categories_modal_form' do %>
  <%= form_with model: @material_category,
                      data: {
                        action: 'oroshi--dashboard#modalFormSubmit:prevent',
                        refresh_target: 'material_categories'
                      } do |form| %>
    <%= render 'form', form: form %>
    <%= form.submit '保存', class: 'btn btn-primary my-2' %>
  <% end %>
<% end %>