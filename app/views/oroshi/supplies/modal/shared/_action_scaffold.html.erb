<div class="modal-header">
  <div class="modal-title w-100 d-flex flex-column gap-1 justify-content-center align-items-center align-middle" id="supplyActionModalLabel">
    <div class="fs-5">供給ツールパネル</div>
    <div class="d-flex fs-6" id="date_title">
      <%= l(Date.parse(@dates.first), format: :long) %> ~ <%= l(Date.parse(@dates.last), format: :long) %>
    </div>
    <div class="d-flex small">
      <% joins = @supply_dates.flat_map(&:supply_date_supply_type_variations) %>
      <% if joins.empty? %>
        供給なし
      <% else %>
        供給ある日:  <%= @supply_dates.select{|supply_date| supply_date.supply.any? }.map{ |supply_date| l(supply_date.date, format: :long) }.join(', ') %>
      <% end %>
    </div>
  </div>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
  <% if joins.empty? %>
    <div class="w-100 text-center">
      供給なしので、反映できません。
    </div>
  <% else %>
    <%= yield :modal_content %>
  <% end %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">閉じる</button>
</div>