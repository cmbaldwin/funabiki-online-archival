<%= content_for :modal_content do %>
  <% if @invoice.persisted? %>
    <%= turbo_stream_from @invoice %>
    <%= turbo_frame_tag dom_id(@invoice), src: @invoice %>
  <% else %>
    <%= render partial: 'oroshi/invoices/invoice' %>
  <% end %>
<% end %>

